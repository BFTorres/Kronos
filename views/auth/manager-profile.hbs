<h1>  Welcome {{user.username}}</h1>
<a href="/new-task" class="btn btn-outline-light">Create task</a> 
  <h2>All Tasks</h2>
  <div class="allTasks">
    {{#if isTodo}}
     <div>
      <h3>To Do</h3>
     {{#each todo}}
     <a href="/tasks/{{this.id}}" class="list-group-item list-group-item-action list-group-item-dark">
      Task:{{this.title}}| Status:{{this.status}} </a> <br>
     {{/each}} 
    </div> 
   {{/if}}
  {{#if isInProgres}}
  <div>
    <h3>In Progres</h3>
    {{#each pending}}
    <a href="/tasks/{{this.id}}" class="list-group-item list-group-item-action list-group-item-dark">
    Task:{{this.title}}|Status:{{this.status}} </a> <br>
    {{/each}}  </div>
    {{else}}
    <div >
    <h3>In Progres</h3>
    </div>
  {{/if }}
   
    {{#if isDone}}
     <div >
    <h3>Done</h3>
    {{#each doneTasks}}
    <a href="/tasks/{{this.id}}" class="list-group-item list-group-item-action list-group-item-dark">
     Task:  {{this.title}}|Status:{{this.status}}</a> <br>
    {{/each}} 
    </div>
    {{else}}
    <div class="done" >
    <h3>Done</h3>
    </div>
    {{/if}}
  </div>
