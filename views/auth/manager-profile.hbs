<h1> Welcome {{user.username}}</h1>
<div class="section1" style="margin-top: 0; display:inline; margin-left: 60px">
  <a href="/new-task" style='background:goldenrod;font-weight: bolder;' class="btn" type="submit">Create Task</a>
  <a href="/info&goals" style='background:goldenrod;font-weight: bolder;' class="btn" type="submit">Update Info &
    Goals</a>
</div>
<div class="allTasks container-fluid">
  {{#if isTodo}}
  <div>
    <h3>To Do</h3>
    {{#each todo}}
    <div class="dropdown" style="width: 400px; margin: 10px">
      <button class="list-group-item list-group-item-action list-group-item-dark dropdown-toggle" type="button"
        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Task:{{this.title}} <br>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title"><b>{{this.title}} </b> </h4>
              <p class="card-text">
              <h6><b>Description:</b> {{this.description}} <br></h6>
              </p>
              <a style="background:goldenrod;font-weight: bolder;" class="btn" href="/tasks/{{this.id}}/edit">Update</a>
              <a style="background:goldenrod;font-weight: bolder;" class="btn"
                href="/tasks/{{this.id}}/delete">Delete</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div>
    <h3>In Progres</h3>
  </div>
  {{/if }}
  {{#if isInProgres}}
  <div>
    <h3>In Progres</h3>
    {{#each pending}}
    <div class="dropdown" style="width: 400px; margin: 10px">
      <button class="list-group-item list-group-item-action list-group-item-dark dropdown-toggle" type="button"
        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Task:{{this.title}}<br>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title"><b>{{this.title}} </b> </h4>
              <p class="card-text">
              <h6><b>Description:</b> {{this.description}} <br></h6>
              </p>
              <a style="background:goldenrod;font-weight: bolder;" class="btn" href="/tasks/{{this.id}}/edit">Update</a>
              <a style="background:goldenrod;font-weight: bolder;" class="btn"
                href="/tasks/{{this.id}}/delete">Delete</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div>
    <h3>In Progres</h3>
  </div>
  {{/if }}
  {{#if isDone}}
  <div>
    <h3>Done</h3>
    {{#each doneTasks}}
    <div class="dropdown" style="width: 400px; margin: 10px">
      <button class="list-group-item list-group-item-action list-group-item-dark dropdown-toggle" type="button"
        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Task:{{this.title}} <br>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li>
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title"><b>{{this.title}} </b> </h4>
              <p class="card-text">
              <h6> <b>Description:</b> {{this.description}} <br></h6>
              </p>
              <a style="background:goldenrod;font-weight: bolder;" class="btn" href="/tasks/{{this.id}}/edit">Update</a>
              <a style="background:goldenrod;font-weight: bolder;" class="btn"
                href="/tasks/{{this.id}}/delete">Delete</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div>
    <h3>Done</h3>
  </div>
  {{/if }}
</div>