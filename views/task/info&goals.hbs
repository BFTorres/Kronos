<h1>Update Info & Goals</h1>
<div class="infogoals">
    <div class="login">
        <form action="/main" method="POST">
            <h3>Update Info</h3>
            <div class="form-floating infogoals">
                <textarea class="form-control" placeholder="Update info" id="floatingTextarea" name="info"></textarea>
                <label for="floatingTextarea">Info</label>
            </div>
            <h3>Update Goals</h3>
            <div class="form-floating infogoals">
                <textarea class="form-control" placeholder="Update info" id="floatingTextarea" name="goals"></textarea>
                <label for="floatingTextarea">Goals</label>
            </div>
            <button type="submit" style='background:goldenrod;font-weight: bolder;' class="btn">Update</button>
        </form>
    </div>
</div>