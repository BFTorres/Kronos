<div id="manager">
   <div class="row">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-4 offset-lg-4">
    <form  class="taskmaker" action="/new-task" method="POST">
       <div class=" container" >
       <div class="row m-0">
          <div class="col-sm-12 col-md-12 col-lg-12 mt-50">
      <h1>KRONOS</h1>
      </div>
        </div>
         <div class="row m-0">
          <div class="col-sm-12 col-md-12 col-lg-12 login-btn">
      <h2>Create a new task</h2>
       </div>
       </div>

<div class="row m-0">
        <div class="col-sm-12 col-md-12 col-lg-12 login-btn"> 
        <label class="form-label">Title</label>
        <input type="text" class="form-control" name="title">
      </div>
        <div class="col-sm-12 col-md-12 col-lg-12 login-btn"> 
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="description">
      </div>
        <div class="col-sm-12 col-md-12 col-lg-12 login-btn"> 
        <label class="form-label" for="department">Department</label>
      <select class="form-select" name="department" aria-label="Default select example">
        <option value="disabled " disabled>Choose Department</option>
        {{#each departments}}
        <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      </div>
        <div class="col-sm-12 col-md-12 col-lg-12 login-btn"> 
        <label class="form-label" for="asignedTo">Assign To:</label>
      <select class="form-select" id="inputGroupSelect01" name="asignedTo" aria-label="Default select example">
        <option value="disabled " disabled>Asign the task to</option>
        {{#each data}}
        <option value="{{this.id}}">{{this.username}}</option>
        {{/each}}
      </select>
      </div>
      </div>
      <div class="row m-0">
        <div class="col-sm-12 col-md-12 col-lg-12 login-btn">
      <button type="submit" class="login-click login-btn">Create</button>
      </div>
      </div>
    </form>
       </div></div> 
</div></div>
{{#if msg}}
<br>
<div class="alert alert-danger" role="alert">
  {{msg}}
</div>
{{/if}}