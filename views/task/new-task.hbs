
<form action="/new-task" method="POST" id="silvi">
  <div class="form">
    <label class="form-label" >Title</label>
    <input type="text" class="form-control" name="title">
  </div>
    <div class="mb-3">
    <label  class="form-label">description</label>
    <input type="text" class="form-control" name="description">
  </div>
<div class="input-group-prepend">
    <label class="input-group-text" for="department">Department</label>
  </div>
  <select class="form-select" id="department" name="department" aria-label="Default select example">
    <option value="disabled " disabled>Choose Department</option>
  {{#each departments}}
    <option value="{{this}}">{{this}}</option>
  {{/each}}
  </select>
</div>
<div> 
   <label class="input-group-text" for="department">Assign To:</label>
  </div>
<select class="form-select" id="inputGroupSelect01" name="asignedTo" aria-label="Default select example"  >
  <option value="disabled " disabled>Asign the task to</option>
  {{#each data}}
    <option value="{{this.id}}">{{this.username}}</option>
  {{/each}}
  </select>
</div>
  <div class="mb-3">
    <label  class="form-label">Assigned By</label>
    <input type="text" class="form-control" name="asignedBy" placeholder="{{user.username}}" disabled>
  </div>
  <button type="submit">Create</button>
</div>

{{#if msg}}
<br>
<div class="alert alert-danger" role="alert">
{{msg}}
</div>
{{/if}}